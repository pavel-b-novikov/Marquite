@using Marquite.Bootstrap
@using Marquite.Bootstrap.Extensions
@using Marquite.Core
@using Marquite.Test.MarqForms
@model Marquite.Test.Models.SampleFormModel
@{
    Model.UserId = "Very big user Id";
}
@using (Html.Bs().Container(true).Open())
{
    using (Html.Bs().Row().Open())
    {
        using (Html.Bs().Column(9).Open())
        {
            using (Html.Form("Forms").Horizontal(4,8).Open())
            {
                @Html.FormGroupTextFor(c => c.UserName).AddElement(null,Html.Marq("p").AddClass("help-block").TrailingHtml(Html.ValidationMessageFor(c=>c.UserName)))
                @Html.FormGroup().AddElement(Html.LabelFor(c => c.Age), 
                    Html.InputGroupFor(c => c.Age).WithRightAddon("> 18").WithLeftButton(Html.Bs().Button("Pick...")))
    
                @Html.FormGroupDropdownFor(c => c.Gender, new []
                {
                    new SelectListItem() { Value = "1", Text = "Male" }, 
                    new SelectListItem() { Value = "0", Text = "Female" }
                })
                @Html.FormGroupDisplayFor(c => c.UserId)
                @Html.FormGroupCheckboxFor(c=>c.IsActive)

                @Html.Bs().Button("Сохранить").Large().Danger().Pull(BootstrapPull.Right)
                @Html.Bs().Button("Отменить").Large().Pull(BootstrapPull.Right).Css(Css.MarginRight, "10px")
            }
        }

        using (Html.Bs().Column(3).Open())
        {
            using (Html.Form("Forms").Horizontal(5, 7).Open())
            {
                
            }
        }
    }
}
